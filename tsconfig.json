{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "declaration": true,
    "downlevelIteration": true,
    "noEmitOnError": true,
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
