{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "declaration": true,
    "downlevelIteration": true,
    "noEmitOnError": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "rootDir": "./src",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["src/type", "node_modules/@types"]
  },
  "exclude": ["node_modules/", "lib/"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
